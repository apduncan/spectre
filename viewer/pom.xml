<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>spectre</artifactId>
        <groupId>uk.ac.uea.cmp.spectre</groupId>
        <version>1.1.5</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>viewer</artifactId>
    <version>1.1.5</version>

    <name>Spectre: Viewer</name>

    <profiles>
        <profile>
            <id>gurobi</id>
            <dependencies>
                <dependency>
                    <groupId>uk.ac.earlham.metaopt</groupId>
                    <artifactId>gurobi</artifactId>
                    <version>1.0.0</version>
                    <exclusions>
                        <exclusion>
                            <groupId>uk.ac.earlham.metaopt</groupId>
                            <artifactId>metaopt</artifactId>
                        </exclusion>
                    </exclusions>
                </dependency>
            </dependencies>
        </profile>
    </profiles>

    <build>

        <sourceDirectory>src/main/java</sourceDirectory>
        <!--<testSourceDirectory>src/test/java</testSourceDirectory>-->

        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.0.2</version>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <mainClass>uk.ac.uea.cmp.spectre.viewer.Spectre</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>

            <!-- Creates scripts for all platforms that allow the user to easily execute this tool -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>appassembler-maven-plugin</artifactId>
                <version>1.6</version>

                <configuration>
                    <platforms>
                        <platform>${spectre-platform}</platform>
                    </platforms>
                    <repositoryLayout>flat</repositoryLayout>
                    <programs>
                        <program>
                            <mainClass>uk.ac.uea.cmp.spectre.viewer.Spectre</mainClass>
                            <id>spectre</id>
                            <jvmSettings>
                                <extraArguments>
                                    <extraArgument>-Dapple.laf.useScreenMenuBar=true</extraArgument>
                                </extraArguments>
                            </jvmSettings>
                        </program>
                    </programs>
                </configuration>
            </plugin>

            <!-- Makes sure output is executable -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <id>add-execute-perms</id>
                        <phase>package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <chmod file="${build-dir}/bin/spectre" perm="755" />
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>

    </build>

    <dependencies>

        <!-- Spectre -->

        <dependency>
            <groupId>uk.ac.uea.cmp.spectre</groupId>
            <artifactId>core</artifactId>
            <version>1.1.5</version>
        </dependency>

        <dependency>
            <groupId>uk.ac.uea.cmp.spectre</groupId>
            <artifactId>net</artifactId>
            <version>1.1.5</version>
        </dependency>

        <dependency>
            <groupId>uk.ac.uea.cmp.spectre</groupId>
            <artifactId>qtools</artifactId>
            <version>1.1.5</version>
        </dependency>

        <dependency>
            <groupId>uk.ac.uea.cmp.spectre</groupId>
            <artifactId>flatnj</artifactId>
            <version>1.1.5</version>
        </dependency>


        <!-- PDF output -->
        <dependency>
            <groupId>com.itextpdf</groupId>
            <artifactId>itextpdf</artifactId>
            <version>5.5.0</version>
        </dependency>

        <!-- SVG output -->
        <dependency>
            <groupId>org.apache.xmlgraphics</groupId>
            <artifactId>batik-svggen</artifactId>
            <version>1.7</version>
        </dependency>
        <dependency>
            <groupId>org.apache.xmlgraphics</groupId>
            <artifactId>batik-svg-dom</artifactId>
            <version>1.7</version>
        </dependency>

        <!-- EPS output -->
        <dependency>
            <groupId>org.apache.xmlgraphics</groupId>
            <artifactId>xmlgraphics-commons</artifactId>
            <version>1.4</version>
        </dependency>

        <!-- For apple extensions -->
        <dependency>
            <groupId>com.apple</groupId>
            <artifactId>AppleJavaExtensions</artifactId>
            <version>1.4</version>
        </dependency>
        <dependency>
            <groupId>uk.ac.uea.cmp.spectre</groupId>
            <artifactId>lasso</artifactId>
            <version>1.1.5</version>
            <scope>compile</scope>
        </dependency>


    </dependencies>

</project>
